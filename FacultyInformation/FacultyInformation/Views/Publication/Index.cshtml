@model IEnumerable<FacultyInformation.Models.Publication>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = null; // or Layout = "";
}


<h2>Publication Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PublicationTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PublicationID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PublicationID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PublicationID })
            </td>
        </tr>
    }
</table>
